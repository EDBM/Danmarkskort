<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Scene?>
<?import BFST20Project.MapCanvas?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>


<Scene
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="BFST20Project.Controller"
        fx:id="scene"
        onKeyPressed="#onKeyPressed">

    <root>
        <StackPane minWidth="1200"
                   minHeight="800">
            <MapCanvas fx:id="mapCanvas"
                       width="${scene.width}"
                       height="${scene.height}"
                       onScroll="#onScroll"
                       onMousePressed="#onMousePressed"
                       onMouseDragged="#onMouseDragged"
            />
            <BorderPane pickOnBounds="false">
                <top>
                    <HBox
                          minWidth="300"
                          minHeight="50"
                          style="-fx-background-color: rgba(0,0,0,0.3);
                                         -fx-padding: 10px;
                                  ">
                        <Label style= "
                                      -fx-font-weight: bold;
                                      -fx-font-size: 4em;

                                      -fx-text-fill: White;"

                               text="DanmarksKort"/>



                    </HBox>


                </top>


                <left>
                    <Pane minWidth="100"
                          minHeight="400"
                          style="-fx-background-color: rgba(255,255,255,0.5);
                                 ">

                        <VBox minWidth="100"
                              minHeight="300">

                            <BorderPane>



                                <top>


                                        <VBox style="-fx-padding: 30px"
                                            BorderPane.alignment="TOP_CENTER"
                                            minWidth="100"
                                            minHeight="100">

                                        <FlowPane fx:id="images"
                                            prefWrapLength="200"
                                            style="-fx-text-align: center;">
                                            <HBox minWidth="30"
                                                  minHeight="20">

                                            </HBox>

                                            <ImageView fx:id="car"
                                                       pickOnBounds="true"
                                                       preserveRatio="true"
                                                       onMouseClicked='#chooseCarPicker'>

                                                <image>
                                                    <Image url ="/images/car.png">
                                                    </Image>
                                                </image>

                                            </ImageView>

                                            <HBox minWidth="70"
                                                  minHeight="20">

                                            </HBox>
                                            <ImageView fx:id="walk"
                                                       pickOnBounds="true"
                                                       preserveRatio="true"
                                                       onMouseClicked='#chooseWalkPicker'>
                                                <image>
                                                    <Image url ="/images/walk.png"></Image>
                                                </image>
                                            </ImageView>
                                        </FlowPane>


                                            <HBox minWidth="100"
                                                  minHeight="20">

                                            </HBox>

                                    <VBox styleClass="addresssearch"
                                          minWidth="200"
                                          prefHeight="400">

                                        <Label text="Vælg startpunkt"
                                               style="-fx-text-align: center;
                                                      -fx-font-weight: bold;"
                                               />
                                        <TextField fx:id="start"
                                                   style="-fx-border-color: none;
                                                          -fx-border-style: solid;
                                                          -fx-background-color: rgba(255,255,255,1)"
                                                   onKeyTyped="#addressStart"/>

                                        <Label text="Vælg slutpunkt"
                                               style="-fx-text-align: center;
                                                      -fx-font-weight: bold;

                                                        "/>
                                        <TextField  fx:id="slut"
                                                    style="-fx-border-color: none;
                                                          -fx-border-style: solid;
                                                          -fx-background-color: rgba(255,255,255,1)"
                                                    onKeyTyped="#addressEnd"/>
                                        </VBox>


                                 </VBox>


                                </top>


                                <bottom >


                                <HBox fx:id = "colorButton"
                                      BorderPane.alignment="BOTTOM_CENTER">


                                    <Button fx:id="changeColor"
                                                StackPane.alignment="CENTER"
                                                prefHeight="40"
                                                prefWidth="200"
                                                text="Barbie mode"
                                                textAlignment="CENTER"
                                                style="-fx-border-color:#D7B3D8;

                                                      "
                                                onMouseClicked="#changeColor">

                                    </Button>

                                    <Button fx:id="changeColor2"
                                            StackPane.alignment="CENTER"
                                            prefHeight="40"
                                            prefWidth="200"
                                            text="Batman mode"
                                            textAlignment="CENTER"
                                            style="-fx-border-color: black;

                                                      "
                                            onMouseClicked="#changeColor2">

                                    </Button>
                                </HBox>
                                </bottom>

                            </BorderPane>

                        </VBox>
                    </Pane>
                </left>
            </BorderPane>
            <AnchorPane fx:id="root" pickOnBounds="false">

                <VBox AnchorPane.rightAnchor="0.0"
                      AnchorPane.bottomAnchor="5.0"
                      StackPane.alignment="BOTTOM_RIGHT"

                      minWidth="50"
                      minHeight="50">


                    <Label
                           style="-fx-text-alignment: center;"/>
                    <Button fx:id="zoomInd"
                            text="+"
                            textAlignment="CENTER"

                            style="
                            -fx-border-color: #676767;"
                            onMouseClicked="#zoomIn"


                    >

                    </Button>
                    <Button fx:id="zoomUd"
                            text="-"
                            textAlignment="CENTER"
                            style="-fx-border-color: #676767;"
                            onMouseClicked="#zoomOut">

                    </Button>
                </VBox>
            </AnchorPane>
        </StackPane>
    </root>
</Scene>